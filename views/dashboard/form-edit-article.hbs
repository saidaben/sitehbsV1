<section class="contain">
<hgroup>
    <h2 class="apropos">Editer <span>mon ar</span>ticle</h2>
    <h3>modifier</h3>
</hgroup>




    <form method="post" action="/article/edit/{{article._id}}" class="form container-inscr" enctype="multipart/form-data">
      
            <label for="titre" class="label">Titre</label>
            <input class="input" id="titre" type="text" name="titre" value="{{article.titre}}">

            <label for="date" class="label">Date</label>
            <input class="input" id="date" type="date" name="date" value="{{article.date}}">

            <label for="sous_titre" class="label">Sous titre</label>
            <input class="input-soustitre" id="sous_titre" type="text" name="sous_titre" value="{{article.sous_titre}}">

            <label for="contenu" class="label">Contenu</label >
            <input class="input-contenu" id="contenu" type="text" name="contenu" value="{{article.contenu}}">
<br>

<label for="auteur" class="label">Auteur</label >
            <input class="input" id="auteur" type="text" name="auteur" value="{{article.auteur}}">

            {{!-- preview de l'image  --}} 
            <img class="picto-nav" src="{{article.image}}" alt="">
            
            <label for="image" class="label">Image</label>
            <input class="input" id="image" type="file" name="image" value="{{article.image}}">

<br>
            <button class="btn">Poster</button>
    </form>

  
</section>