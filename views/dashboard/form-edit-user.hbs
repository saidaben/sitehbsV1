<section class="contain">
  <hgroup>
    <h2>Les <span>informations de</span>: {{user.username}}</h2>
    <h3>  <img class="picto" src="{{user.avatar}}" alt="img profile">
</h3>
    
  </hgroup>

  <section class="container-inscr">

    
    <p class="p-info-user"><i class="fas fa-angle-right"></i>Id : {{user.id}}</p>
    <p class="p-info-user"><i class="fas fa-angle-right"></i>Prénom : {{user.username}}</p>
    <p class="p-info-user"><i class="fas fa-angle-right"></i>Email : {{user.email}}</p>
    <p class="p-info-user"><i class="fas fa-angle-right"></i>Rôle : {{user.role}}</p>
    {{!-- <p class="p-info-user"><i class="fas fa-angle-right"></i>Inscrit depuis le : {{user.date_inscription}}</p> --}}
     <p class="p-info-user"><i class="fas fa-angle-right">

     </i>Inscrit depuis le : {{#format user.date_inscription}}{{/format}}
     
     </p>

    {{!-- <p class="p-info-user"><i class="fas fa-angle-right"></i>moment{{user.date_inscription}}.format("DD/MM/YYYY") --}}

  </section>

  <hgroup>
    <h2>Mettre à <span>jour le rôle</span> de:</h2>
    <h3> {{user.username}} qui est un {{user.role}}</h3>
  </hgroup>


  <form method="post" action="/users/edit/{{user._id}}" class="form container-inscr">


    <div class="role">

      <label for="radio-user" class="label">user</label>
      <input id="radio-user" name="role" value="user" type="radio"  {{setCheckedbox "user" user.role }}>

      <label for="radio-editor" class="label">editor</label>
      <input id="radio-editor" name="role" value="editor" type="radio"  {{setCheckedbox "editor" user.role }}>

      <label for="radio-admin" class="label">admin</label>
      <input id="radio-admin" name="role" value="admin" type="radio"  {{setCheckedbox "admin" user.role }}>

    </div>

    <button class="button-poster">Mettre à jour.</button>

  </form>

  <hgroup>
    <h2>Supprimer <span>l'</span> utilisateur:</h2>
    <h3> {{user.username}} qui est un {{user.role}}</h3>
  </hgroup>

  <form method="post" action="/users/delete/{{user._id}}" class="form container-inscr">

    <p class="p-supr">Etes vous vraiment sûr de vouloir supprimer "{{user.username}}"</p>
    <button>
      <img class="picto-nav" src="/images/supr.svg" alt="">
    </button>
  </form>

</section>

<script>
  window.swal(' Attention', 'Toute suppression est définitive', 'warning')
</script>