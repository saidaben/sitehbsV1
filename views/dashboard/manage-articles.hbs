 <hgroup >
    <h2 class="apropos">Manager <span>les ar</span>ticles</h2>
    <h3>supr/modifier</h3>
</hgroup>

<section class="container-dashboard">

<table class="tabler">
 
        {{!-- thead fix mediac --}}
        <thead>
      <tr >
        <th class="cell">Titre</th>
        <th class="cell">Date</th>
        {{!-- <th class="cell">Sous titre</th> --}}
        {{!-- <th class="cell">Contenu</th> --}}
        <th class="cell">Auteur</th>
        <th class="cell">Image</th>
        {{!-- <th class="cell">Catégorie</th> --}}
        <th class="cell">Edit</th>
        <th class="cell">Delete</th>
      </tr>
</thead>

     <tbody>
        {{#unless articles.length}}
        <tr>
            <td class="cell" colspan="7">
                pas d'articles enregistrés pour le moment...
            </td>
        </tr>
        {{/unless}}
        {{#each articles}}
        <tr>
            <td class="cell">{{this.titre}}</td>
             <td class="cell">{{this.date}}</td>
            {{!-- <td class="cell">{{this.sous_titre}}</td> --}}
            {{!-- <td class="cell ">{{this.contenu}}</td> --}}
             <td class="cell" rows="3">{{this.auteur}} </td>
            <td class="cell"> <img class="picto-nav" src="{{this.image}}" alt=""></td>
            {{!-- <td class="cell">{{this.categorie}}</td> --}}
            <td class="cell">
                {{!-- un lien cest tjrs un get!!!!!! --}}
                <a href="/article/edit/{{this._id}}"><img class="picto-nav" src="/images/edit.svg" alt=""></a>
            </td>
            <td class="cell">
                <form method="post" action="/article/delete/{{this._id}}">
                    <button ><img class="picto-nav" src="/images/supr.svg" alt=""></button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>


</section>