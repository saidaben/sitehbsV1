<section class="deuxieme">

    <hgroup>
        <h2 id="apropos">{{article.titre}}</h2>
        <h3> <span>{{article.sous_titre}}</span></h3>
    </hgroup>

    <div class="container">

        <figure class="blog"><img class="artblog" src="{{article.image}}" alt="image enfance">
            <figcaption> <span> {{article.categorie}}</span> de : {{article.auteur}} </figcaption>
        </figure>

        <div class="para">
            <p class="ptexte" id="ptexte">{{{article.contenu}}}
            </p>
            <p class="pauteur"> Edit√© par: {{article.redacteurs.username}}, le : {{#formatage article.date}}{{/formatage}} </p>
        </div>
    </div>


</section>
