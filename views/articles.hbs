<section class="contain">

    <hgroup>
        <h2 id="apropos">Art<span>icles</span>.</h2>
        <h3> Retrouvez tous les articles de notre rédaction.</h3>
    </hgroup>

    <section class="container-art">
        {{#unless articles.length}}


        <p>Nous sommes désolé il n'y à pas d'articles pour le moment...</p>

        {{/unless}}
        {{#each articles}}
        {{#compare categorie "Brouillons"  operator="!="}}


        <figure class="blog"> <img class="artblog" src="{{this.image}}" alt="image enfance">

            <figcaption>
                <p class="titre-figcaption">{{this.titre}} </p> <a href="/art/{{this._id}}"><i
                        class="fas fa-angle-right"></i> Accédez à l'article</a>
                <a href="/article/favoris/{{this._id}}"><img class="favoris" src="/images/fav.png" alt=""></a>
            </figcaption>


        </figure>

        {{/compare}} {{/each}}
    </section>
</section>